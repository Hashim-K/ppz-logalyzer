# PPZ-Logalyzer Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
DB_PASSWORD=dev_password_change_in_production
DATABASE_URL=postgresql://ppz_user:dev_password_change_in_production@localhost:5432/ppz_logalyzer

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Backend Configuration
RUST_LOG=info
JWT_SECRET=development_secret_change_in_production
MAX_FILE_SIZE=104857600
PROMETHEUS_ENABLED=true

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Monitoring
GRAFANA_PASSWORD=admin

# Development overrides (uncomment for development)
# NODE_ENV=development
# RUST_LOG=debug
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_WS_URL=ws://localhost:8000
